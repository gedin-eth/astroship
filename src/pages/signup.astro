---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Request Access">
  <Container>
    <div class="max-w-md mx-auto mt-16 bg-white p-8 rounded-xl border-2 border-slate-100 shadow-xl">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-slate-900">Get Early Access</h1>
        <p class="text-slate-600 mt-2">
          Join the waitlist for Octostore. We're rolling out access to developers in batches.
        </p>
      </div>

      <form
        id="waitlist-form"
        class="flex flex-col gap-4"
        method="POST"
        action="YOUR_GOOGLE_SCRIPT_URL_HERE">
        
        <div>
          <label for="name" class="block text-sm font-medium text-slate-700 mb-1">Full Name</label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Octo Pus"
            required
            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-slate-700 mb-1">Email Address</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="you@company.com"
            required
            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition"
          />
        </div>

        <div>
          <label for="usecase" class="block text-sm font-medium text-slate-700 mb-1">What are you building?</label>
          <select
            name="usecase"
            id="usecase"
            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition"
          >
            <option value="indie">Personal AI Agent</option>
            <option value="startup">Startup / SaaS</option>
            <option value="enterprise">Enterprise Internal Tool</option>
            <option value="web3">Web3 / Decentralized App</option>
            <option value="other">Other</option>
          </select>
        </div>

        <button
          type="submit"
          class="mt-2 w-full bg-slate-900 text-white font-bold py-3 px-4 rounded-lg hover:bg-slate-800 transition flex items-center justify-center gap-2">
          <span>Join Waitlist</span>
          <Icon name="bx:bxs-rocket" class="w-5 h-5" />
        </button>

        <p class="text-xs text-center text-slate-500 mt-4">
          We'll notify you when your spot opens up. No spam, ever.
        </p>
      </form>

      <div id="success-message" class="hidden text-center py-10">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
          <Icon name="bx:bx-check" class="w-8 h-8 text-green-600" />
        </div>
        <h3 class="text-2xl font-bold text-slate-900">You're on the list!</h3>
        <p class="text-slate-600 mt-2">
          Thanks for signing up. We'll be in touch soon.
        </p>
        <a href="/" class="inline-block mt-6 text-purple-600 font-semibold hover:underline">
          &larr; Back to Home
        </a>
      </div>
    </div>
  </Container>
</Layout>

<script>
  // This script simulates form submission. 
  // To start collecting data in a real Google Sheet, you can easily set up a Google Apps Script.
  // 1. Create a Google Sheet.
  // 2. Extensions > Apps Script.
  // 3. Paste a script to handle POST requests (doPost).
  // 4. Deploy as Web App (Anyone can access).
  // 5. Replace 'YOUR_GOOGLE_SCRIPT_URL_HERE' in the form action with your script URL.
  
  const form = document.getElementById("waitlist-form");
  const successMessage = document.getElementById("success-message");

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      
      const button = form.querySelector("button");
      const originalText = button.innerHTML;
      button.disabled = true;
      button.innerHTML = "<span>Saving...</span>";

      // Simulate network request
      await new Promise(resolve => setTimeout(resolve, 1000));
      
      // In a real implementation, you would use fetch() here:
      // const formData = new FormData(form);
      // await fetch(form.action, { method: 'POST', body: formData });

      form.classList.add("hidden");
      successMessage.classList.remove("hidden");
    });
  }
</script>
