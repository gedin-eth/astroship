---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Standard",
    price: "$29",
    popular: false,
    features: [
      "50 GB storage included",
      "Unlimited API calls",
      "Client-side encryption",
      "LangChain integration",
      "Email support",
      "Data export anytime",
    ],
    button: {
      text: "Request Access",
      link: "/signup",
    },
  },
  {
    name: "Pro",
    price: "$99",
    popular: true,
    features: [
      "500 GB storage included",
      "Unlimited API calls",
      "Everything in Standard",
      "Priority support",
      "Advanced analytics",
      "Team collaboration",
      "99.9% uptime guarantee",
    ],
    button: {
      text: "Request Access",
      link: "/signup",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "Unlimited storage",
      "Unlimited API calls",
      "Everything in Pro",
      "Dedicated infrastructure",
      "Custom uptime guarantee",
      "On-premise option",
      "White-glove onboarding",
    ],
    button: {
      text: "Contact Sales",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Simple & Predictable pricing. No Surprises.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
