---
import { Picture } from "astro:assets";
import heroImage from "assets/cute-octopus.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Cute playful Octostore octopus mascot holding a memory chip"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Own Your Agent's Memory
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      <span class="font-semibold text-slate-900">90% cheaper</span> than Pinecone. 
      <span class="font-semibold text-slate-900">Encrypted</span> by default. 
      <span class="font-semibold text-slate-900">Portable</span> across platforms. 
      Built on Walrus Protocol for sovereign AI memory infrastructure.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/signup"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-rocket" />
         Request Access
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="#pricing"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-black w-4 h-4" name="bx:bxs-dollar-circle" />
         View Pricing
      </Link>
    </div>
